[flake8]
max-line-length = 120
extend-ignore = 
    # Black handles formatting
    E203,
    W503,
    # Line too long - black already formatted, some docstrings/comments exceed
    E501,
    # Missing whitespace around operator (style preference)
    E226,
    # Bare except - will address later
    E722,
    # Import not at top - sometimes needed for conditional imports
    E402,
    # Unused imports - many are intentional re-exports or for type hints
    F401,
    # Unused variables - often intentional in tests or for destructuring
    F841,
    # f-string without placeholders - sometimes used for consistency
    F541
exclude = 
    .git,
    __pycache__,
    .venv,
    venv,
    .eggs,
    *.egg
