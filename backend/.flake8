[flake8]
max-line-length = 100
extend-ignore = E203, W503
exclude = 
    .git,
    __pycache__,
    .venv,
    venv,
    .eggs,
    *.egg
per-file-ignores = 
    # Ignore unused imports in __init__.py (re-exports)
    __init__.py:F401
    # Ignore unused imports in test files (often imported for fixtures or type hints)
    tests/*.py:F401,F841
    tests/**/*.py:F401,F841
    # Ignore import order in conftest (pytest requires certain patterns)
    conftest.py:E402
    # CLI may have unused imports for future use
    cli.py:F401
